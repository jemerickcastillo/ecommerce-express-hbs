 <section id="colections" >
      <div class="container">
            <h2>Productos Destacados</h2>
            <hr style="margin-bottom:40px;">
            <div class="row">
                {{#each destacados}}
                    <div class="col-md-4">
                        <div class="card" style="">
                            <img class="card-img-top" src="{{this.imagePath}}" alt="Card image cap">
                                 <div class="card-body icons"> 
                                    <a href="/add-to-cart/{{_id}}" class="btn btn-primary"><i class="fa fa-shopping-cart"></i></a>
                                    <a href="/product_details/{{_id}}" class="btn btn-info"><i class="fa fa-eye"></i></a>
                                </div>
                            <div class="card-body">
                                <h5 class="card-title">{{this.title}}</h5>
                                <p class="card-text">${{price}}</p>

                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
      </div>
</section>